// CARD & CARDS CSS

ul
	padding 0
	list-style none
	&.cards
		&.cards-players
			display grid
			grid-template-columns repeat(auto-fit, minmax(240px, 1fr))
			grid-gap 10px
			li
				&.card
					background-color #ffffff
					box-shadow 0 12.1px 10px rgba(0, 0, 0, 0.065), 0 97px 80px rgba(0, 0, 0, 0.07)
					article
						&.card-player
							padding 1rem
							.card-demographics
								display flex
								flex-flow column wrap
								.player
									&.player-name
										display block
										.player-title
											font-size 1.25rem
									&.player-country
										display block
										.player-label
											display inline-block
											font-family 'Roboto Condensed', font-default-sans-serif, font-family-san-serif
											width 3.5rem